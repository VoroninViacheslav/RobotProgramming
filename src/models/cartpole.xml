<mujoco model="cartpole">
  <compiler coordinate="local"/>
  <option gravity="0 0 -9.81" timestep="0.001" integrator="RK4"/>

  <default>
    <joint damping="0"/>
    <geom contype="0" conaffinity="0" friction="0 0 0" rgba="0.7 0.7 0.7 1"/>
  </default>

  <worldbody>
    <geom name="rail" type="capsule" fromto="-2 0 0  2 0 0" size="0.02" rgba="0 1 0 1"/>
    <body name="cart" pos="0 0 0">
      <joint name="slider" type="slide" axis="1 0 0" range="-2 2" damping="0.5"/>
      <geom name="cart_geom" type="box" size="0.3 0.15 0.15" mass="6" rgba="1 0 0 1"/>
      <body name="pole" pos="0 0 0">
        <inertial pos="0 0 1.5" mass="0.5" diaginertia="1.5 1.5 0.0001"/>
        <joint name="hinge" type="hinge" axis="0 1 0" damping="0.02"/>
        <geom name="pole_geom" type="capsule" fromto="0 0 0  0 0 3" size="0.05" rgba="1 1 1 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="cart_motor" joint="slider" gear="1" ctrlrange="-1000 1000"/>
  </actuator>

</mujoco>